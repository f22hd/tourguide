<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="allebdi.tourguide.PlaceDetailsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginBottom="@dimen/details_margin"
            app:theme="@style/AppTheme"
            app:popupTheme="@style/Theme.AppCompat.DayNight.DarkActionBar"
             />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/details_place_pic_height"
            android:scaleType="centerCrop"
            android:contentDescription="@string/resturantpic" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/details_margin"
            android:textSize="@dimen/details_place_name_font_size" />

        <RatingBar
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/details_margin"
            style="?android:attr/ratingBarStyleSmall"
            android:isIndicator="true" />

        <TextView
            android:id="@+id/descrption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/details_description_font_size"
            android:layout_margin="@dimen/details_margin"
            android:padding="@dimen/details_padding"/>


        <Button
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/details_margin"
            android:background="@color/colorPrimary"
            android:text="@string/navigation"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/details_description_font_size" />


    </LinearLayout>
</ScrollView>
